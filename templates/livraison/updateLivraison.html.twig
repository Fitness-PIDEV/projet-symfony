{% extends 'base-back.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
    <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Remplir le formulaire</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Advanced Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
    <div class="container-fluid">
    <!-- SELECT2 EXAMPLE -->
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Ajouter Produit</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        <div> <p>reference commande</p></div>
                        {{ form_widget (form.refCommande) }}
                        {{ form_errors(form.refCommande) }}
                    </div>
                    <div class="form-group">
                        <div> <p>Nom_user</p></div>
                        {{ form_widget (form.donneesUser) }}
                        {{ form_errors(form.donneesUser) }}
                    </div>

                    <div class="form-group">
                        <div> <p>Localisation</p></div>
                        {{ form_widget (form.localisation) }}
                        {{ form_errors(form.localisation) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" value="ajouter" class="btn btn-info">modifier</button>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                    <!-- /.form-group -->

                    <!-- /.form-group -->
                </div>
                <!-- /.col -->

                <!-- /.col -->
            </div>
            <!-- /.row -->



            <!-- /.row -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
    </div>

    <section/>

{% endblock %}