{% extends 'base-back.html.twig' %}

{% block title %}Hello CoursController!{% endblock %}

{% block body %}
    <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Remplir le formulaire</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Advanced Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
    <div class="container-fluid">
    <!-- SELECT2 EXAMPLE -->
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Ajouter Cours</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="card-body">

                        <div class="col-md-6">
                            <div> <p>nomCours</p></div>

                            {{ form_widget (form.nomCours) }}
                            {{ form_errors(form.nomCours) }}
                        </div>
                        <div class="col-12 col-sm-6">
                            <div> <p>dureeCours</p></div>
                            {{ form_widget (form.dureeCours) }}
                            {{ form_errors(form.dureeCours) }}
                        </div>
                        <div class="col-12 col-sm-6">
                            <div> <p>salle</p></div>
                            {{ form_widget (form.salle) }}
                            {{ form_errors(form.salle) }}
                        </div>

                        <div class="col-12 col-sm-6">
                            <div> <p>nomCoach</p></div>
                            {{ form_widget (form.nomCoach) }}
                            {{ form_errors(form.nomCoach) }}
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" value="ajouterCours" class="btn btn-info">Ajouter</button>
                        <button type="submit" class="btn btn-default float-right">Cancel</button>
                    </div>
                    <!-- /.card-footer -->
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                    <!-- /.form-group -->

                    <!-- /.form-group -->
                </div>
                <!-- /.col -->

                <!-- /.col -->
            </div>
            <!-- /.row -->



            <!-- /.row -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
    </div>

    <section/>

{% endblock %}