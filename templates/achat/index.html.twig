{% extends 'base-back.html.twig' %}

{% block title %}Hello AchatController!{% endblock %}

{% block body %}
    <div class="content-wrapper" style="min-height: 1335.69px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Gestion Achat</h1>
                    </div>

                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">

                <!-- /.row -->

                <!-- /.row -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Liste des Achats</h3>

                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0" style="height: 300px;">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th> idProduit </th>
                                        <th> refProduit </th>
                                        <th> prix </th>




                                        <th>delete</th>
                                        <th>update</th>

                                    </tr>
                                    </thead>
                                    <tbody>

                                    <tr {% for g in tabachat %}>
                                        <td> {{ g.idProduit }}</td>
                                        <td> {{ g.refProduit}}</td>
                                        <td> {{ g.prix }}</td>




                                        <td>  <a  href=" {{ path('achatDelete', {"id": g.idProduit}) }} " onclick="return confirm('Êtes-vous sûr de vouloir supprimer?')" > delete</a>
                                        <td>  <a  href=" {{ path('updateachat', {"id": g.idProduit}) }} "  > update</a>

                                        </td>

                                    </tr {% endfor %}>


                                    </tbody>
                                </table>
                                <!-- /.endTable -->
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <!-- /.row -->

                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>



{% endblock %}

