{% extends 'base-front.html.twig' %}

{% block title %}Hello ReclamationController!{% endblock %}

{% block body %}
    <div id="all">

        <div id="content" style="margin-left: 20%">
            <div class="container">

                <div class="col-md-8">
                    <div class="box">


                        <h1 style="text-align: center">Reclamation</h1>

                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(form.titre) }}
                        {{ form_row(form.message) }}

                        <button type="submit" class="btn btn-primary" style="margin: 20px 0px 0px 290px" ><i class="fa fa-envelope"></i>Envoyer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
