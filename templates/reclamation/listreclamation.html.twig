{% extends 'base-back.html.twig' %}

{% block title %}Gestion reclamation{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header">
                        <h3 class="card-title">Liste des reclamations</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped projects">
                            <tr>
                                <th>TITRE</th>
                                <th>MESSAGE</th>
                                <th>ETAT</th>
                                <th></th>
                                <th></th>
                            </tr>
                            {% for rec in reclamation %}
                                <tr>
                                    <td>{{rec.titre|upper}}</td>
                                    <td>{{rec.message | raw}}</td>
                                    {% if rec.etat == 0 %}
                                        <td><label class="badge badge-warning">En cours</label></td>
                                    {% else %}
                                        <td><label class="badge badge-success">Trait√©</label></td>
                                    {% endif %}
                                    <td><a href="{{ path('reclamation_valide', {"id": rec.id}) }}"><i class="fas fa-check-circle" ></i></a></td>
                                    <td class="project-actions text-right">
                                       <a class="btn btn-danger btn-sm" href="{{ path('rec_delete', {'id': rec.id}) }}">
                                            <i class="fas fa-trash">
                                            </i>
                                            Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
        </section>
    </div>

{% endblock %}
