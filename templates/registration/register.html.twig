{% extends 'base-front.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div id="all" >

        <div id="content" style="margin-left: 450px">
            <div class="container">

                <div class="col-md-6">
                    <div class="box">


                        <h1 style="text-align: center;">Inscription</h1>

                        {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.num) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.role) }}
                        {{ form_row(registrationForm.image) }}
                        {{ form_row(registrationForm.captchaCode) }}
                       <div class="text-center"> {{ form_row(registrationForm.agreeTerms) }} </div>


                        <button type="submit" class="btn btn-primary" style="margin: 20px 0px 0px 185px" ><i class="fa fa-user"></i>S'inscrire</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}