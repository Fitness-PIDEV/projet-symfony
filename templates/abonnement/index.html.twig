{% extends 'base-back.html.twig' %}
{% block content %}
{% block title %}Abonnement index{% endblock %}

{% block body %}

    <div class="content-wrapper">
    <center>   <h1>Abonnement</h1> </center>
      <center>  <div>
            <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
                <img src="https://img.icons8.com/nolan/344/google-web-search.png" style="width:50px;height:50px;"/></p>

        </div> </center>


        <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Prix <a class="btn btn-primary navbar-btn" href="{{ path('triprix') }}">tri  </a>        </th>
                <th>Nom</th>
                <th>Prenom</th>
               <th> <a class="btn btn-primary navbar-btn" href="{{ path('app_abonnement_new') }}">Create new  </a>        </th>    </tr>
        </thead>
        <tbody>
        <tbody>
        <tbody>
        <tbody id="myTable">
        {% for abonnement in abonnements %}
            <tr>

                <td>{{ abonnement.type }}</td>
                <td>{{ abonnement.prix }}</td>
                <td>{{ abonnement.nom }}</td>
                <td>{{ abonnement.prenom }}</td>
                <td>
                    <a class="btn btn-primary navbar-btn" href="{{ path('app_abonnement_show', {'id': abonnement.id}) }}">show</a>
                    <a class="btn btn-primary navbar-btn" href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        <tbody id="search">

        </tbody>
        </tbody>
    </table>
</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


{% endblock %}

{% endblock %}

